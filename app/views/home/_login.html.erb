<% @user ||= current_user %>
<% time_out?(@user) %>
<div class="container login-index">
<div class="index-content">
<h5 class="mt-2 mb-5">継続は力なり<i class="fa fa-flag "></i></h5>
<div class="habit-list mb-3">
<p>名前 <%= @user.name%></p>
<p>称号 <%= degree(@user.level) %></p>

<% if @user.habits.empty? %>
<div class="not-habit">なし</div>
<% else %>
<div class="habit-list-item">
<% @user.habits.each do |habit| %>
<div class="p-1"><%= link_to habit.task, record_habit_path(habit.id)%></div>

<li class="habit-show"><%= habit.task %></li>

<div id="habit-modal" class="habit-modal-wrapper">
<div class="modal-content">
 <p>習慣 <%= habit.task %></p>
 <p>週<%= habit.frequency %>回</p>
 <p>達成(週)<%= habit.complete %>回</p>
 <p>終了時間<%= habit.end_time %>日</p>
</div>
</div>

<% end %>
</div>
<% end %>
</div>


<div class="button">
<%= link_to "記録する", mission_user_path(@user) %>
</div>
</div>
</div>