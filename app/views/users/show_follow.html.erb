<div class="container">
<img src="/assets/show.jpeg" width="100%" height="100px">

<div class="show-content">
<%= attachment_image_tag @user, :image, fallback: "no-image.jpeg", class: "user-image" %>
<div class="pl-4">
<h5><%= @user.name %></h5>
<strong>称号 <%= degree(@user.level) %></strong>
<div class="pt-2">
<%= link_to "フォロー", following_user_path(@user) %>
<%= @user.following.count %>
<%= link_to "フォロワー", followers_user_path(@user) %>
<%= @user.followers.count %>
</div>
</div>
</div>

<p><%= link_to "習慣一覧", @user, class: "pl-4"%></p>
 
<h5 class="mt-5"><%= @title %></h5>
<table class="table table-light">
  <tr><th>名前</th><th>称号</th></tr>
   <% @users.each do |user| %>
  <tr><td> <%= link_to user.name, "/users/#{user.id}" %></td>
  <td><%= degree(user.level) %></td></tr>
  <% end %>
  </table>
