<img src="/assets/show.jpeg" width="100%" height="68px">
<div class="show-content-box">
<div class="show-content">
<%= attachment_image_tag @user, :image, fallback: "no-image.jpeg", class: "icon" %>
<div class="pl-3">
<h5><%= link_to @user.name, @user %></h5>
Lv. <%= @user.level %>
<div class="user-relation pt-2">
<a href="<%= following_user_path(@user) %>">
フォロー
<strong id="following">
<%= @user.following.count %>
</strong>
</a>

<a href="<%= followers_user_path(@user)%>">
フォロワー
<strong id="followers">
<%= @user.followers.count %>
</strong>
</a>

</div>
</div>
</div>
<% if current_user?(@user) %>
<%= link_to "ユーザー編集", edit_user_registration_path(@user), class: "pl-3" %>
<%= link_to "非公開投稿", private_post_path(@user), class: "pl-3" %>
<% end %>

<%= render 'follow_form' %>

<% unless @user.profile.empty? %>
<div class="plofile-box">
<%= @user.profile %>
</div>
<% end %>
</div>