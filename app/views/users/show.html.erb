<div class="container">
  <div class="show-content">
<img src="/assets/show.jpeg" width="100%" height="100px">
<div class="user-content pt-3">
<%= attachment_image_tag @user, :image, fallback: "no-image.jpeg", class: "user-image" %>
<h5 class="pt-3"><%= @user.name %></h5>
<p>称号 <%= degree(@user.level) %></p>
</div>
</div>
<% if @user == current_user %>
<%= link_to "ユーザー編集", edit_user_registration_path(@user.id) %>
<% end %>
<h5 class="mt-5">習慣一覧</h5>
<table class="table table-light">
<tr><th>項目</th><th>週</th></tr>
<% @user.habits.each do |habit| %>
<tr><td><%= link_to habit.task, edit_habit_path(habit) %></td>
<td><%= habit.frequency %>回</td>
</tr>
<% end %>
 </table>
</div>