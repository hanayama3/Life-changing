<div class="show-page">
<%= render 'user_infomation' %>
  <div class="title-box">
    <h5>習慣</h5>
  </div>
  <table class="table table-hover">
    <tr><th>項目</th><th>週</th><th>回数(週)</th><th>終了日時</th></tr>
    <% @user.habits.each do |habit| %>
    <tr>
      <td><%= habit.task %></td>
      <td><%= habit.frequency %>回</td>
      <td><%= habit.complete %>回</td>
      <td><%= habit.end_time %>日</td>
      <% if current_user?(@user) %>
        <td><%= link_to "変更",  edit_habit_path(habit)%></td>
      <% end %>
    </tr>
    <% end %>
  </table>
<div class="chart">
  <%= line_chart @user.records.pluck(:date, :level) %>
</div>
</div>