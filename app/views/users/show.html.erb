<div class="show-page">
<%= render 'user_show' %>
<%= render 'follow_form' %>

<% if current_user?(@user) %>
<%= link_to "ユーザー編集", edit_user_registration_path(@user), class: "pl-3" %>
<%= link_to "非公開投稿", private_post_path(@user), class: "pl-3" %>
<% end %>
<% unless @user.profile.blank? %>
<div class="plofile">
<%= @user.profile %>
</div>
<% end %>
<table class="table table-light">
<tr><th>項目</th><th>週</th><th>回数(週)</th><th>終了日時</th></tr>
<% @user.habits.each do |habit| %>
<tr>
<td><%= habit.task %></td>
<td><%= habit.frequency %>回</td>
<td><%= habit.complete %>回</td>
<td><%= habit.end_time %>日</td>
<% if current_user?(@user) %>
<td><%= link_to "変更",  edit_habit_path(habit)%></td>
<% end %>
</tr>
<% end %>
 </table>
<div class="m-3">
<%= line_chart @user.records.limit(30).pluck(:date, :level) %>
</div>
</div>
</div>