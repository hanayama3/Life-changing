<div class="container">
<img src="/assets/show.jpeg" width="100%" height="100px">

<div class="show-content">
<%= attachment_image_tag @user, :image, fallback: "no-image.jpeg", class: "user-image" %>
<div class="pl-4">
<h5><%= @user.name %></h5>
<strong>称号 <%= degree(@user.level) %></strong>
<div class="pt-3">
<%= link_to "フォロー", following_user_path(@user) %>
<%= @user.following.count %>
<%= link_to "フォロワー", followers_user_path(@user) %>
<%= @user.followers.count %>
</div>
</div>
</div>

<%= render 'follow_form' %>

<% if @user == current_user %>
<%= link_to "ユーザー編集", edit_user_registration_path(@user.id) %>
<% end %>
<h5 class="mt-5">習慣一覧</h5>
<table class="table table-light">
<tr><th>項目</th><th>週</th></tr>
<% @user.habits.each do |habit| %>
<tr>
<td><%= link_to habit.task, "#" %></td>
<td><%= habit.frequency %>回</td>
<td><%= link_to "変更",  edit_habit_path(habit)%></td>
</tr>
<% end %>
 </table>
</div>